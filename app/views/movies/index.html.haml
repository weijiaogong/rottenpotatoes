-#  This file is app/views/movies/index.html.haml
%h1 All Movies 
= form_tag movies_path, id: :ratings_form, method: :get do 
  Include:
  =hidden_field_tag 'column', get_column
  - @all_ratings.each do |rating, active|
    = rating
    = check_box_tag "ratings[#{rating}]", 'true', active, id: 'ratings_#{rating}'
  = submit_tag 'Refresh', id: :ratings_submit
  
%table#movies
  %thead
    %tr
      %th{class: if_sortby('title')}= link_to  'Movie Title',id: :title_header, column: :title, ratings: get_ratings
      %th Rating
      %th{class: if_sortby('release_date')}= link_to 'Release Date', id: :release_date_header, column: :release_date, ratings: get_ratings
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
